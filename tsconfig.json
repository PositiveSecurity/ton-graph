{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "types": ["node", "vscode", "mocha"],
        "skipLibCheck": true,
        "lib": [
            "es2018",
            "dom"
        ],
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}